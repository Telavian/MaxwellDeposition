@page "/"

@inherits IndexBase

<div style="display: grid; grid-template-rows: auto auto auto 1fr; grid-template-columns: 1fr auto; height: 100%; width: 100%">
    <h1 style="grid-row: 1; grid-column: 1 / span 2; text-align: center;">
        Search Maxwell deposition
    </h1>

    <h4 style="grid-row: 2; grid-column: 1 / span 2; text-align: center; padding-top: 50px">
        Enter search items followed by space: Ex. 104:17,23 105:3
    </h4>

    <input style="grid-row: 3; grid-column: 1; padding-left: 5px; height: 50px" @bind-value="@SearchLocations" />
    <button style="grid-row: 3; grid-column: 2; padding-left: 5px;" @onclick="@(() => SearchAsyncCommand())">
        Search
    </button>

    @if (AllSearchMatches.Length == 0)
    {
        <div style="grid-row: 4; grid-column: 1 / span 2; padding-top: 15px;">
            @SearchResults
        </div>
    }
    else
    { 
        <div style="grid-row: 4; grid-column: 1 / span 2; padding-top: 15px;">
            <div style="display: grid; grid-template-rows: auto 1fr; grid-template-columns: auto 1fr auto 1fr; height: 100%; width: 100%">
                <div style="grid-row: 1; grid-column: 1; padding-left: 25px">
                    <div style="height: 30px; text-align: center; display: flex; justify-content: center; align-items: center">
                        Filter start:
                    </div>
                </div>

                <input style="grid-row: 1; grid-column: 2; padding-left: 5px; height: 30px;" @bind-value="@StartFilterWord" />

                <div style="grid-row: 1; grid-column: 3; padding-left: 15px">
                    <div style="height: 30px; text-align: center; display: flex; justify-content: center; align-items: center">
                        Filter end:
                    </div>                    
                </div>

                <input style="grid-row: 1; grid-column: 4; padding-left: 5px; margin-right: 25px; height: 30px;" @bind-value="@EndFilterWord" />

                <div style="grid-row: 2; grid-column: 1 / span 4; padding-top: 25px">
                    @SearchResults
                </div>
            </div>
        </div>
    }
</div>
